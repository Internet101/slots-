import random

MAX_LINES = 3
MAX_BET = 100
MIN_BET = 1

ROWS = 3
COLS = 3

symbol_count = {
    "💦": 2,
    "🍑": 4,
    "🍒": 6,
    "🍆": 8
}
symbol_value = {
    "💦": 5,
    "🍑": 4,
    "🍒": 3,
    "🍆": 2
}
def check_winnings(columns, lines, bet, values):
    winnings = 0
    winning_lines = []
    for line in range(lines):
        symbol = columns[0][line]
        print(f"Checking line {line + 1}, initial symbol: {symbol}")  # Debugging line
        for column in columns:
            symbol_to_check = column[line]
            print(f"Column symbol: {symbol_to_check}")  # Debugging line
            if symbol != symbol_to_check:
                break
        else:
            winnings += values[symbol] * bet
            winning_lines.append(line + 1)
            print(f"Line {line + 1} wins with {symbol}!")  # Debugging line
    return winnings, winning_lines

def get_slot_machine_spin(rows, cols, symbols):
    all_symbols =[]
    for symbol, symbol_count in symbols.items():
        for _ in range(symbol_count):
            all_symbols.append(symbol)

    columns = [] 
    for _ in range(cols):
        column = []
        current_symbols = all_symbols[:]
        for row in range(rows):
            value = random.choice(current_symbols)
            current_symbols.remove(value)
            column.append(value)

        columns.append(column)

    return columns

def print_slot_machine(columns):
    for row in range(len(columns[0])):
        for i, column in enumerate(columns):
            if i != len(columns) -1:
                print(column[row], end=" | ")
            else:
                print(column[row], end="")
        
        print()
        

def deposit():  
    while True:
        amount = input("What would you like to deposit? $")
        if amount.isdigit():
            amount = int(amount)
            if amount > 0:
                break
            else:
                print("Amount must be greater than 0.")
        else:
            print("Please enser a number.")

    return amount
     
def top_up(balance):
    while True:
        amount = input(f"Your current balance is ${balance}. How much of your money that could go towards bettering your life would you like to use to top up your balance? $")
        if amount.isdigit():
            amount = int(amount)
            if amount > 0:
                balance += amount
                print(f"Your balance has been topped up by ${amount}. Your new balance is ${balance}. ")
                break
            else:
                print("Amount mus be greater than 0.")
        else:
            print("Please enter a valid number, if you're too drunk to do so please get some fresh air and return with a vaild credit or debit card")

    return balance

def get_number_of_lines():
    while True:
        lines = input("enter the ammount of lines you would like to bet on (1-" + str(MAX_LINES) + ") ? ")
        if lines.isdigit():
            lines = int(lines)
            if 1 <= lines <= MAX_LINES:
                break
            else:
                print("Enter a valid ammount of lines.")
        else:
            print("Please enser a number.")

    return lines

def get_bet():
    while True:
        amount = input("What would you like to bet per line? $")
        if amount.isdigit():
            amount = int(amount)
            if MIN_BET <= amount <= MAX_BET:
                break
            else:
                print(f"Amount must be between ${MIN_BET} - ${MAX_BET}.")
        else:
            print("Please enser a number.")

    return amount

def spin(balance):
    lines = get_number_of_lines()
    while True:
        bet = get_bet()
        total_bet = bet * lines
        if total_bet > balance:
            print(
                f"You dont have enough to bet that amount, your current balance is: ${balance}")
        else:
            break
            
    print(
        f"You are betting ${bet} on {lines} lines. Total bet is ${total_bet}")

    slots = get_slot_machine_spin(ROWS, COLS, symbol_count)
    print_slot_machine(slots)
    winnings, winning_lines = check_winnings(slots, lines, bet, symbol_value)
    print(f"You won ${winnings}.")
    print(f"You won on:", *winning_lines)
    return winnings - total_bet
    
def main():
    balance = deposit()
    while True:
        print(f"Current balance is ${balance}")
        answer = input("Press enter to play (q to quit).")
        if answer == "q":
            break
        if balance == 0:
            print("Out of funds!")
            top_up_choice = input("Would you like to top up your balance? (y/n): ")
            if top_up_choice.lower() == "y":
                balance = top_up(balance)
            else:
                break
        balance += spin(balance)
        

    print(f"You left with ${balance}.")


main()